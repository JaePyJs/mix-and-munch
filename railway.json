{
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "node backend/src/server.js",
    "restartPolicyMaxRetries": 5,
    "restartPolicyWindowSeconds": 60
  },
  "plugins": ["postgres"],
  "variables": {
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production"
    },
    "PORT": {
      "description": "Port to run server on",
      "value": "3001"
    },
    "LOG_LEVEL": {
      "description": "Log level",
      "value": "info"
    }
  }
}
