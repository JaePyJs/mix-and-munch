# ========================================
# AI MODELS & APIs
# ========================================
# Gemini API Key (Google AI Studio)
GEMINI_API_KEY=your_gemini_api_key_here

# GLM-4.6 API Key (Alternative AI model)
GLM_API_KEY=your_glm_api_key_here

# AI Model Selection (gemini | glm)
AI_MODEL_PRIMARY=gemini
AI_MODEL_FALLBACK=glm

# ========================================
# BACKEND DATABASE
# ========================================
# PostgreSQL Connection
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_db_password_here
DB_NAME=mix_munch_db

# SQLite Alternative (if using SQLite instead of PostgreSQL)
DB_TYPE=postgres  # Set to 'sqlite' to use SQLite
SQLITE_PATH=./data/recipes.db

# ========================================
# BACKEND SERVER
# ========================================
BACKEND_PORT=3001
BACKEND_HOST=localhost
NODE_ENV=development

# ========================================
# WEB CRAWLER SETTINGS
# ========================================
# Crawl Scheduling
CRAWL_SCHEDULE_DAILY=0 2 * * *    # Daily at 2 AM
CRAWL_SCHEDULE_WEEKLY=0 3 * * 0   # Sunday at 3 AM
PARSER_SCHEDULE=0 */6 * * *       # Every 6 hours

# Rate Limiting
CRAWLER_TIMEOUT=30000              # 30 seconds per page
CRAWLER_MAX_RETRIES=3
CRAWLER_CONCURRENT_REQUESTS=5

# ========================================
# YOUTUBE & CONTENT PARSER
# ========================================
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_ENABLE_TRANSCRIPT=true
YOUTUBE_ENABLE_CAPTIONS=true

# ========================================
# LOGGING & MONITORING
# ========================================
LOG_LEVEL=info  # error, warn, info, debug
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ========================================
# API RATE LIMITING
# ========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000        # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100        # 100 requests per window

# ========================================
# CORS & SECURITY
# ========================================
CORS_ORIGIN=http://localhost:2000,http://localhost:3000
CORS_CREDENTIALS=true

# API Keys (for admin endpoints)
ADMIN_API_KEY=your_secure_admin_key_here

# ========================================
# COOKIE & SESSION (NextAuth Optional)
# ========================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# ========================================
# ERROR HANDLING & NOTIFICATIONS
# ========================================
# Email Notifications
NOTIFY_EMAIL_ENABLED=false
NOTIFY_EMAIL_TO=your_email@example.com
SENDGRID_API_KEY=your_sendgrid_key_here

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=

# ========================================
# IMAGE STORAGE & CDN
# ========================================
IMAGE_STORAGE_TYPE=local  # local, s3, cloudinary
IMAGE_LOCAL_PATH=./public/images
IMAGE_MAX_SIZE_MB=10
IMAGE_FORMATS=jpg,jpeg,png,webp

# AWS S3 (if using S3 for images)
AWS_S3_BUCKET=
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ========================================
# CACHE SETTINGS
# ========================================
CACHE_TYPE=memory  # memory, redis
CACHE_TTL=3600    # 1 hour
REDIS_URL=redis://localhost:6379

# ========================================
# DEVELOPMENT ONLY
# ========================================
# Mock Data for Testing
MOCK_CRAWL_DATA=false
MOCK_API_RESPONSES=false

# Debug Mode
DEBUG=mix-munch:*

# ========================================
# TESTING
# ========================================
TEST_DATABASE_URL=
TEST_MODE=false

# ========================================
# SECURITY
# ========================================
ENCRYPTION_KEY=your_encryption_key_here
JWT_SECRET=your_jwt_secret_here
BCRYPT_ROUNDS=10

# ========================================
# NOTES
# ========================================
# 1. Never commit .env.local to git
# 2. Keep all API keys secure
# 3. Use different keys for dev/staging/prod
# 4. Rotate API keys regularly
# 5. Add to .gitignore: .env.local, .env.*.local, .env
